<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-title">post title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" />
      </div>
      <div class="form-group">
        <label for="post-content">post:</label>
        <textarea class="form-input" type="text" id="post-content" name="post-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Publish</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3>Current posts:</h3>

    {{#each posts }}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{id}}">{{title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{id}}">DELETE</button>
        {{!-- <div class="update-post"><button class="btn btn-sm btn-danger" data-id="{{id}}">UPDATE</button></div> --}}

      </div>
    </div>
    {{/each}}
  </div>
  {{else}}
  <p>no posts from this user</p>
  {{/if}}
</div>

<script src="./js/post.js"></script>