{{#if logged_in}}
<div class="text-center">
  <h2>{{title}}</h2>
  <p>Created by {{user.email}} OR {{id}} on {{date}}</p>
  <p>
    {{post}}
{{#each comments}}
    <p>Comments: {{comment_text}} by:{{user.email}}</p>
    <p>{{created_at}}</p>
    <div class="add-comment"><a href="/addcomment/{{post_id}}"><button class="btn btn-sm btn-danger" data-id="{{post_id}}">ADD COMMENT</button></a></div>
    <div class="edit-comment"><a href="/editcomment/{{id}}"><button class="btn btn-sm btn-danger" data-id="{{id}}">EDIT COMMENT</button></a></div>
    {{!-- <form class="delCom"><div class="delete-comment"><button type="submit" class="btn btn-sm btn-danger" data-id="{{id}}">DELETE COMMENT</button></div></form> --}}
    <form class="delCom"><button type="submit" class="btn btn-sm btn-danger" id="deletebtn" data-id="{{id}}">DELETE COMMENT</button></form>
    {{/each}}
  </p>
  {{!-- {{#if comment <= 0}}
  <div class="add-comment"><a href="/addcomment/{{post_id}}"><button class="btn btn-sm btn-danger" data-id="{{post_id}}">ADD COMMENT</button></a></div>
  {{/if}} --}}
  <div class="update-post"><a href="/editpost/{{id}}"><button class="btn btn-sm btn-danger" data-id="{{id}}">UPDATE</button></a></div>
</div>
{{else}}
<div class="text-center">
  <h2>{{title}}</h2>
  <p>Created by {{user.email}} OR {{id}} on {{date}}</p>
  <p>
    {{post}}
  </p>
</div>
{{/if}}

<script src="/js/delCom.js"></script>