<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Talk Tech</title>
    <link rel="stylesheet" href="/public/css/style.css">
</head>

<body>

<div>
    <header>
        <h1>Join the Conversation</h1>
        <nav>
            <!-- Conditionally render login or logout links -->
        {{#if logged_in}}
        <a href="/posts">posts</a> | <a href="/homepage">home</a> |
        <a href="/createpost">dashboard</a>
        <button class="no-button" id="logout">logout</button>
        {{else}}
        <a href="/login">login</a>
        <a href="/homepage">home</a>
        <a href="/dashboard">dashboard</a>
        {{/if}}
        </nav>
    </header>

    <div>
        {{#if post.length}}
  <div class="col-md-6 post-list">
    <h3>Current posts:</h3>

    {{#each post }}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}">{{post.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
    </div>

    <main>
        {{{ body }}}
    </main>
    <footer>

    </footer>
</div>

{{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}

</body>
</html>